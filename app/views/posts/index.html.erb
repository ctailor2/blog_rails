<h1>Posts!</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.body %></td>
			<td><%= link_to "Show", post %></td>
			<td><%= link_to "Edit", edit_post_path(post) %>
			<td><%= link_to "Delete", post_path(post), method: :delete, data: { confirm: 'Are you sure?'} %>
		</tr>
	<% end %>
</table>

<%= link_to "New Post", new_post_path %>